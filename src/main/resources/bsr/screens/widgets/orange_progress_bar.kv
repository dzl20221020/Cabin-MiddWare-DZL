#:kivy 2.0.0

<OrangeProgressBar@ProgressBar>:
    canvas:
        Color:
            rgb: 1, 1, 1
        BorderImage:
            border: (12, 12, 12, 12)
            pos: self.x, self.center_y - 18
            size: self.width, 47
            source: 'atlas://data/images/defaulttheme/progressbar_background'
        BorderImage:
            border: [int(min(self.width * (self.value / float(self.max)) if self.max else 0, 12))] * 4
            pos: self.x, self.center_y-6
            size: self.width * (self.value / float(self.max)) if self.max else 0, 25
			source: 'images/progress_bar.png'
